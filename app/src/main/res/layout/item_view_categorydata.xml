<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#ECEAD9">

<RelativeLayout
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:layout_gravity="fill">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/purple_700" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_marginLeft="120dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/data_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Item"
            android:textColor="#041050"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/data_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_id"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Price"
            android:textColor="#041050"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/data_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Shop"
            android:textColor="#041050"
            android:textSize="14sp" />

    </RelativeLayout></androidx.cardview.widget.CardView>